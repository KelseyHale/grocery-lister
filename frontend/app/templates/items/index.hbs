<div class="row">
  <div class="col s8 offset-s2">
    <h1>Grocery List</h1>
    {{input type="text" id="new-item" placeholder="Add to list" value=newItem action="createItem"}}
    <ul class="collection with-header">
      <li class="collection-header"><h4>Grocery List</h4></li>
      {{#each item in model}}
       <li class="collection-item">{{link-to item.name 'items.show' item}}</li>
      {{/each}}
    </ul>
  </div>
</div>
